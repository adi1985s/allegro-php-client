{
    "name": "rindeal/allegro-client",
    "description": "Allegro WebAPI PHP Client",
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Jan Chren",
            "email": "dev.rindeal+allegro-php-client@gmail.com"
        }
    ],

    "minimum-stability": "stable",
    "prefer-stable": true,

    "require": {
        "php": ">=5.4",

        "lib-curl": "*",
        "lib-openssl": "*",
        "lib-pcre": "*",

        "ext-soap": "*",
        "ext-mcrypt": "*",
        "ext-mbstring": "*",

        "psr/log": "1.0.*",
        "psr/cache": "1.0.*",

        "respect/validation": "1.1.*",
        "brandonwamboldt/utilphp": "1.1.*"
    },
    "require-dev": {
        "wsdl2phpgenerator/wsdl2phpgenerator": "3.3.*",

        "phpunit/phpunit": "4.8.*",
        "monolog/monolog": "1.19.*",

        "squizlabs/php_codesniffer": "2.6.*",
        "phpmd/phpmd": "2.4.*",
        "friendsofphp/php-cs-fixer": "1.11.*"
    },

    "autoload": {
        "psr-4": {
            "Rindeal\\Allegro\\Client\\": "lib/Client/"
        },
        "classmap": [
            "lib/Client.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rindeal\\Allegro\\Test\\": "test/Test/"
        }
    }
}
