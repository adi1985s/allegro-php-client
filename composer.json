{
    "name": "rindeal/allegro-client",
    "description": "Allegro WebAPI PHP Client",
    "type": "library",
    "license": [
        "LGPL-3.0"
    ],
    "authors": [
        {
            "name": "Jan Chren",
            "email": "dev.rindeal+allegro-php-client@outlook.com"
        }
    ],

    "minimum-stability": "stable",
    "prefer-stable": true,

    "repositories": [
      {
        "type": "vcs",
        "url": "https://github.com/php-fig/cache.git"
      }
    ],
    "require": {
        "php": ">=5.4",

        "lib-curl": "*",
        "lib-openssl": "*",
        "lib-pcre": "*",

        "ext-soap": "*",
        "ext-mcrypt": "*",
        "ext-mbstring": "*",

        "psr/log": "~1.0",
        "psr/cache": "dev-master",

        "respect/validation": "~1.0",
        "brandonwamboldt/utilphp": "~1.1"
    },
    "require-dev": {
        "wsdl2phpgenerator/wsdl2phpgenerator": "~3.2",

        "phpunit/phpunit": "~5.1",
        "monolog/monolog": "~1.17",

        "squizlabs/php_codesniffer": "~2.3",
        "phpmd/phpmd": "~2.2",
        "fabpot/php-cs-fixer": "~1.10",
        "phploc/phploc": "~2.1"
    },

    "autoload": {
        "psr-4": {
            "Rindeal\\Allegro\\Client\\": "lib/Client/"
        },
        "classmap": [
            "lib/Client.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rindeal\\Allegro\\Test\\": "test/Test/"
        }
    }
}
